# OpenEnergyData Platform - Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# Renewables.ninja API
# =============================================================================
# Get your API token from: https://www.renewables.ninja/
# Used for fetching solar and wind capacity factor profiles
API_TOKEN_RENEWABLES_NINJA=your_renewables_ninja_token_here

# =============================================================================
# ENTSOE Transparency Platform API
# =============================================================================
# Register and get your token from: https://transparency.entsoe.eu/
# Used for fetching European electricity market data and cross-border flows
API_TOKEN_ENTSOE=your_entsoe_token_here

# =============================================================================
# Copernicus Climate Data Store (CDS) API - ERA5 Data
# =============================================================================
# Register at: https://cds.climate.copernicus.eu/
# Used for fetching ERA5 climate reanalysis data (temperature, wind, solar radiation)
CDS_API_KEY=your_cds_api_key_here
CDS_API_URL=https://cds.climate.copernicus.eu/api/v2

# =============================================================================
# Frontend Configuration
# =============================================================================
# API URL for the React frontend (used by Vite)
VITE_API_URL=http://localhost:8000

# =============================================================================
# Backend Configuration
# =============================================================================
# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
